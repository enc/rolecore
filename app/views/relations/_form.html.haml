= form_for @relation do |f|
  -if @relation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@relation.errors.count, "error")} prohibited this relation from being saved:"
      %ul
        - @relation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :child_id
    = f.number_field :child_id
  .field
    = f.label :child_type
    = f.text_field :child_type
  .actions
    = f.submit 'Save'
