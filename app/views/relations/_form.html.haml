= semantic_form_for @relation, :remote => true do |f|
  -if @relation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@relation.errors.count, "error")} prohibited this relation from being saved:"
      %ul
        - @relation.errors.full_messages.each do |msg|
          %li= msg

  = f.inputs do
    = f.input :parent, :as => :select, :collection => Role.all
    = f.input :child_role, :as => :select, :collection => Role.all.reject { |i| @relation.linked.include? i }
  = f.buttons

