= form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :task_id
    = f.number_field :task_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :sod
    = f.check_box :sod
  .field
    = f.label :weight
    = f.number_field :weight
  .actions
    = f.submit 'Save'
