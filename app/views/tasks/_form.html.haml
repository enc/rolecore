= simple_form_for @task, :remote => true do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name
  = f.input :weight
  = f.input :sod
  = f.button :submit, :class => 'btn primary'
